<% if flash[:my_errors] %>
    <h4>Errors:</h4>
    <% flash[:my_errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @employee do |f| %>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :alias %><br>
    <%= f.text_field :alias %><br><br>

    <%= f.label :office %><br>
    <%= f.text_field :office %><br><br>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>

    <%= f.label :dog_id, "Select a dog: " %>
    <%= f.collection_select :dog_id, Dog.all, :id, :name %><br><br>

    <%= f.label :img_url, "Enter picture url" %><br>
    <%= f.text_field :img_url %><br><br>

    <%= f.submit %>
<% end %>